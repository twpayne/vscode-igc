{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "IGC",
    "patterns": [
        {
            "include": "#records"
        }
    ],
    "repository": {
        "records": {
            "patterns": [
                {
                    "name": "record.a.igc",
                    "match": "^(A)(...)(.*)$",
                    "captures": {
                        "1": {
                            "name": "keyword.control.igc"
                        },
                        "2": {
                            "name": "string.quoted.igc"
                        },
                        "3": {
                            "name": "storage.type.igc"
                        }
                    }
                },
                {
                    "name": "record.h.hfdte.igc",
                    "match": "^(H)(F)(DTE)(\\d\\d)(\\d\\d)(\\d\\d)(.*)$",
                    "captures": {
                        "1": {
                            "name": "keyword.control.igc"
                        },
                        "2": {
                            "name": "string.quoted.igc"
                        },
                        "3": {
                            "name": "storage.type.igc"
                        },
                        "4": {
                            "name": "enity.name.igc"
                        },
                        "5": {
                            "name": "string.quoted.igc"
                        },
                        "6": {
                            "name": "storage.type.igc"
                        },
                        "7": {
                            "name": "invalid.igc"
                        }
                    }
                },
                {
                    "name": "record.h.hffxa.igc",
                    "match": "^(H)(F)(FXA)(\\d+)(.*)$",
                    "captures": {
                        "1": {
                            "name": "keyword.control.igc"
                        },
                        "2": {
                            "name": "string.quoted.igc"
                        },
                        "3": {
                            "name": "storage.type.igc"
                        },
                        "4": {
                            "name": "enity.name.igc"
                        },
                        "5": {
                            "name": "invalid.igc"
                        }
                    }
                },
                {
                    "name": "record.h.igc",
                    "match": "^(H)(.)([0-9A-Z]{3})(.*?):(.*)$",
                    "captures": {
                        "1": {
                            "name": "keyword.control.igc"
                        },
                        "2": {
                            "name": "string.quoted.igc"
                        },
                        "3": {
                            "name": "storage.type.igc"
                        },
                        "4": {
                            "name": "enity.name.igc"
                        },
                        "5": {
                            "name": "string.quoted.igc"
                        }
                    }
                }
            ]
        }
    },
    "scopeName": "source.igc"
}
